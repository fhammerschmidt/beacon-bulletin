{
  "name": "beacon-bulletin-backend",
  "version": "0.0.1",
  "description": "Backend for the beacon bulletin mobile app.",
  "main": "./src/index.js",
  "scripts": {
    "babel-node": "babel-node",
    "build": "rm -r dist && babel ./src -d dist",
    "start": "nodemon --exec npm run babel-node ./src/index.js",
    "backend": "docker-compose up",
    "docker": "docker run -ti -p 1337:1337 beacon:0.1"
  },
  "author": "Florian Hammerschmidt",
  "license": "MIT",
  "dependencies": {
    "axios": "^0.18.0",
    "body-parser": "^1.17.2",
    "cors": "^2.8.4",
    "express": "^4.15.4",
    "mongodb": "^2.2.31",
    "mongoose": "^4.11.10"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-flow": "^6.23.0",
    "nodemon": "^1.17.3"
  }
}
